<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_motocar"
    android:gravity="center"
    tools:context=".SplashAct">

    <TextView
        android:id="@+id/tv_welcome_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_light"
        android:text="@string/welcome_to"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_motto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_welcome_to"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/payback"
        android:text="@string/title_motto"
        android:textColor="@android:color/white"
        android:textSize="83sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_motto_car_rental_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_motto"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_light"
        android:text="@string/motto_car"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/pb_splashscreen"
        android:layout_marginTop="50dp"
        android:progressDrawable="@drawable/db_progressbar"
        style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_motto_car_rental_app"
        android:layout_centerHorizontal="true" />


</RelativeLayout>